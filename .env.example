# ShiftSync Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ENVIRONMENT
ENVIRONMENT=development

# DATABASE
DATABASE_URL=postgresql://shiftsync_user:your_password_here@localhost:5432/shiftsync

# TESSERACT OCR
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=nor

# OPENAI (for GPT-4 Vision)
OPENAI_API_KEY=sk-proj-your_api_key_here

# SECURITY
SECRET_SALT=generate_a_random_32_character_string_here
INTERNAL_API_KEY=generate_another_random_string_here

# RATE LIMITING
RATE_LIMIT_PER_MINUTE=10

# FILE UPLOAD
MAX_FILE_SIZE_MB=10

# FRONTEND URL (for CORS)
FRONTEND_URL=http://localhost:3000

# STRIPE (Optional)
# STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# AZURE STORAGE (Optional)
# AZURE_STORAGE_CONNECTION_STRING=...
# AZURE_STORAGE_CONTAINER_NAME=shiftsync-uploads

# MONITORING (Optional)
# SENTRY_DSN=https://your_key@sentry.io/project_id
